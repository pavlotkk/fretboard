<NoteToggle@ToggleButton>:
    size_hint: None, None
    size: 100, 100
    group: "note"

<PitchToggle@ToggleButton>:
    size_hint: None, None
    size: 100, 100
    group: "pitch"


<ScaleFormLabel@Label>:
    size_hint_x: 0.3
    size_hint_y: None
    height: 100
    color: app.style.color.black


<MainWidget>:
    # root background color to white
    canvas.before:
        Color:
            rgba: app.style.color.white
        Rectangle:
            size: self.size
            pos: self.pos

    # root
    BoxLayout:
        id: root_layout
        orientation: "vertical"
        padding: 10
        spacing: 5
        size: root.size

        # Scale box layout
        GridLayout:
            cols: 2
            size_hint_y: None
            height: self.minimum_height
            canvas.before:
                Color:
                    rgba: app.style.color.grey
                Rectangle:
                    size: self.size
                    pos: self.pos

            # Row 1 (Notes)
            ScaleFormLabel:
                text: "Root note:"
            BoxLayout:
                id: scale_note_layout
                orientation: "horizontal"
                size_hint_y: None
                height: self.minimum_height

                NoteToggle:
                    text: "C"
                    on_state: root.update_add_btn_state()
                NoteToggle:
                    text: "D"
                    on_state: root.update_add_btn_state()
                NoteToggle:
                    text: "E"
                    on_state: root.update_add_btn_state()
                NoteToggle:
                    text: "F"
                    on_state: root.update_add_btn_state()
                NoteToggle:
                    text: "G"
                    on_state: root.update_add_btn_state()
                NoteToggle:
                    text: "A"
                    on_state: root.update_add_btn_state()
                NoteToggle:
                    text: "B"
                    on_state: root.update_add_btn_state()

            # Row 2 (Pitch)
            ScaleFormLabel:
                text: "Pitch:"
            BoxLayout:
                id: pitch_layout
                orientation: "horizontal"
                size_hint_y: None
                height: self.minimum_height

                PitchToggle:
                    text: "#"
                    on_state: root.update_add_btn_state()
                PitchToggle:
                    text: "b"
                    on_state: root.update_add_btn_state()

            # Row 3 (Key)
            ScaleFormLabel:
                text: "Key:"
            Spinner:
                id: key_dropdown
                size_hint: None, None
                size: 200, 100
                text: "..."
                values: "Major",
                on_text: root.update_add_btn_state()

            # Row 4 (Action buttons)
            ScaleFormLabel:
                text: ""

            BoxLayout:
                orientation: "horizontal"
                size_hint_y: None
                height: self.minimum_height

                Button:
                    id: add_btn
                    size_hint: None, None
                    size: 200, 100
                    text: "Add"
                    disabled: True
                    on_release: root.on_add_scale()

                Button:
                    id: clear_btn
                    size_hint: None, None
                    size: 200, 100
                    text: "Clear"
                    on_release: root.on_clear()

        VerticalSpacer:
            size_hint_y: None
            height: 30

        # Scales layout
        ScrollView:
            minimum_height: 400
            scroll_distance: 20
            do_scroll_x: False
            ScaleGridlayout:
                id: scale_layout