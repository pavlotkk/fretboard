#:kivy 1.0.9

<NoteLabel@Label>:
    font_size: 50
    color: app.style.color.black
    size_hint: None, None
    width: 100
    height: 100


<InfoNoteLabel>:
    canvas.before:
        Color:
            rgba: app.style.color.black
        Line:
            width: 2
            rectangle: self.x, self.y, self.width - 2, self.height - 2


<NoPitchNoteLabel>:
    canvas.before:
        Color:
            rgba: self.bg_color
        Ellipse:
            size: self.size
            pos: self.pos


<SharpNoteLabel>:
    canvas.before:
        Color:
            rgba: self.bg_color
        Line:
            width: 4
            circle: self.center_x, self.center_y, self.width / 2 - 4


<FlatNoteLabel>:
    canvas.before:
        Color:
            rgba: self.bg_color
        Line:
            width: 4
            circle: self.center_x, self.center_y, self.width / 2 - 4, 0, 360, 6